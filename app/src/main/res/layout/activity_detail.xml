<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/view"
        android:background="@color/material_drawer_primary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/md_grey_200"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:id="@+id/view2"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_definition"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                card_view:cardCornerRadius="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_definition"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="定义"
                        style="@style/mHeader"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/sub_definition_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mSubhead" />

                    <TextView
                        android:id="@+id/text_definition_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/mText"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/image_definition_1"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        style="@style/mImage" />

                    <View
                        android:id="@+id/divider_definition_1"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@android:color/darker_gray"
                        android:visibility="gone" />
                    <TextView
                        android:id="@+id/sub_definition_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mSubhead" />

                    <TextView
                        android:id="@+id/text_definition_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mText" />

                    <ImageView
                        android:id="@+id/image_definition_2"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        style="@style/mImage" />

                    <View
                        android:id="@+id/divider_definition_2"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@android:color/darker_gray"
                        android:visibility="gone" />
                    <TextView
                        android:id="@+id/sub_definition_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mSubhead" />

                    <TextView
                        android:id="@+id/text_definition_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mText" />

                    <ImageView
                        android:id="@+id/image_definition_3"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        style="@style/mImage" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_display"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                card_view:cardCornerRadius="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_display"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="表示方法"
                        style="@style/mHeader" />

                    <TextView
                        android:id="@+id/sub_display_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mSubhead" />

                    <TextView
                        android:id="@+id/text_display_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mText" />

                    <ImageView
                        android:id="@+id/image_display_1"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        style="@style/mImage" />

                    <View
                        android:id="@+id/divider_display_1"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@android:color/darker_gray"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sub_display_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mSubhead" />

                    <TextView
                        android:id="@+id/text_display_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mText" />

                    <ImageView
                        android:id="@+id/image_display_2"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        style="@style/mImage" />

                    <View
                        android:id="@+id/divider_display_2"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@android:color/darker_gray"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sub_display_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mSubhead" />

                    <TextView
                        android:id="@+id/text_display_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mText" />

                    <ImageView
                        android:id="@+id/image_display_3"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        style="@style/mImage" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_nature"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                card_view:cardCornerRadius="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_nature"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="性质"
                        style="@style/mHeader" />

                    <TextView
                        android:id="@+id/sub_nature_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mSubhead" />

                    <TextView
                        android:id="@+id/text_nature_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mText" />

                    <ImageView
                        android:id="@+id/image_nature_1"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        style="@style/mImage" />

                    <View
                        android:id="@+id/divider_nature_1"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@android:color/darker_gray"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sub_nature_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mSubhead" />

                    <TextView
                        android:id="@+id/text_nature_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mText" />

                    <ImageView
                        android:id="@+id/image_nature_2"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        style="@style/mImage" />

                    <View
                        android:id="@+id/divider_nature_2"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@android:color/darker_gray"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sub_nature_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mSubhead" />

                    <TextView
                        android:id="@+id/text_nature_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        style="@style/mText"
                        android:textIsSelectable="false" />

                    <ImageView
                        android:id="@+id/image_nature_3"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        style="@style/mImage" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
